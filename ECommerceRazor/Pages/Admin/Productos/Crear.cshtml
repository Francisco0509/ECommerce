@page
@model ECommerceRazor.Pages.Admin.Productos.CrearModel
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4><i class="fade fa-plus-circle"></i> Crear nuevo producto</h4>
        </div>
        <div class="card-body">
            <form method="POST" enctype="multipart/form-data">
                <!--validation summary-->
                <div asp-validation-summary="All" class="alert alert-danger d-none" id="validation-summary"></div>
                <!--Campo: Nombre-->
                <div class="mb-3">
                    <label asp-for="Producto.Nombre" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-bolt"></i></span>
                        <input asp-for="Producto.Nombre" class="form-control" placeholder="Ingresa el nombre del producto" />
                    </div>
                    <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
                </div>
                <!--Campo: Descripción-->
                <div class="mb-3">
                    <label asp-for="Producto.Descripcion" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-tag"></i></span>
                        <input asp-for="Producto.Descripcion" class="form-control" placeholder="Ingresa la descripción del producto" />
                    </div>
                    <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                </div>
                <!--Campo: Imagen-->
                <div class="mb-3">
                    <label asp-for="Producto.Imagen" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-image"></i></span>
                        <input type="file" asp-for="Producto.ImagenSubida" class="form-control" placeholder="Ingresa la imagen del producto" />
                    </div>
                    <span asp-validation-for="Producto.ImagenSubida" class="text-danger"></span>
                </div>
                <!--Campo: Precio-->
                <div class="mb-3">
                    <label asp-for="Producto.Precio" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-dollar-sign"></i></span>
                        <input asp-for="Producto.Precio" class="form-control" placeholder="Ingresa el precio del prodcuto " />
                    </div>
                    <span asp-validation-for="Producto.Precio" class="text-danger"></span>
                </div>
                <!--Campo: Stock-->
                <div class="mb-3">
                    <label asp-for="Producto.Stock" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-list-ol"></i></span>
                        <input asp-for="Producto.Stock" class="form-control" placeholder="Ingresa el stock del producto" />
                    </div>
                    <span asp-validation-for="Producto.Stock" class="text-danger"></span>
                </div>
                    <!--Campo: Categoría-->
                    <div class="mb-3">
                        <label asp-for="Producto.CategoriaId" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-table-list"></i></span>
                            <select asp-for=Producto.CategoriaId asp-items="Model.Categorias" class="form-control">
                                <option value="">Seleccione una categoría</option>
                            </select>
                        </div>
                        <span asp-validation-for="Producto.CategoriaId" class="text-danger"></span>
                    </div>
                    <!--Botones-->
                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary"><i class="fa faarrow-left"></i> Regresar</a>
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!--Validación de formulario del lado del cliente-->
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const validationSummary = document.getElementById("validation-summary");
            //Mostrar el contenedor de errores solo si tiene errores
            if(validationSummary.innerHTML.trim() !== "")
                validationSummary.classList.remove("d-none");
        });
    </script>
}
