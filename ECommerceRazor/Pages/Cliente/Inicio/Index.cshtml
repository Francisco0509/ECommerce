@page
@model ECommerceRazor.Pages.Cliente.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Nuestra tienda</h1>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var producto in Model.Productos)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-top-wrapper" style="height: 200px; overflow: hidden;">
                        <!--Imagen del producto-->
                        <img src="@Url.Content($"~/img/{producto.Imagen}")"
                             alt="@producto.Nombre"
                             class="card-img-top w-100 h-100"
                             style="object-fit: cover;" />

                    </div>                    
                    <div class="card-body d-flex flex-column">
                        <!--Título producto-->
                        <h5 class="card-title text-center text-truncate" title="@producto.Nombre">@producto.Nombre</h5>
                        <!--Información breve-->
                        <p class="card-text text-muted">
                            <strong>Precio:</strong> @String.Format("{0:C}", producto.Precio)<br />
                            <strong>Categoría:</strong>@producto.Categoria.Nombre<br />
                        </p>
                        <!--Botón detalle-->
                        <a asp-page="/Cliente/Inicio/Detalle" asp-route-id="@producto.Id" class="btn btn-dark mt-auto w-100 text-uppercase fw-bold">Ver detalle</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
